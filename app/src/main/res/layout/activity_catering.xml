                        android:layout_marginStart="15dp"
                        android:ems="10"
                        android:inputType="number"
                        android:textColor="?attr/metaTextColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/label_SD" />

                    <TextView
                        android:id="@+id/label_AR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Additional Request"
                        android:textColor="?attr/textColor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pln_SD" />

                    <EditText
                        android:id="@+id/pln_AR"
                        android:layout_width="310dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="20dp"
                        android:ems="10"
                        android:hint="Type your request here!"
                        android:inputType="textMultiLine"
                        android:textColor="?attr/metaTextColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/label_AR" />

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="110dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="50dp"
                        android:background="@color/darkblue"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pln_AR" />


                </LinearLayout>
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view1"
        android:background="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
